             x:Class="experiment.ProfilePage"
             Title="Мой профиль">

    <ContentPage.ToolbarItems>

        <ToolbarItem Text="Изменить" IconImageSource="lupa" Order="Primary" Priority="1"/>

    </ContentPage.ToolbarItems>

    <StackLayout>
        <ScrollView VerticalScrollBarVisibility="Never">
            <StackLayout BackgroundColor="#181818">
                
                <StackLayout>
                    <Frame>
                        <StackLayout>
                            <Image Source="avatar.png"/>
                            <Label Text="Галкин Алексей Владимирович"/>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </StackLayout>
