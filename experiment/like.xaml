<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="experiment.like">

    <ContentPage.ToolbarItems>

        <ToolbarItem Text="Профиль" IconImageSource="profile.png" Priority="0" Order="Default" Clicked="ProfileButton"/>
        <ToolbarItem Text="Избранное" Order="Primary" Priority="1"/>
        <ToolbarItem Text="Поиск" IconImageSource="lupa.png" Priority="2" Order="Default" Clicked="OnSearchClicked" />

    </ContentPage.ToolbarItems>
    
    

    <StackLayout>
        <ScrollView VerticalScrollBarVisibility="Never">
            <StackLayout BackgroundColor="#181818" >
                
                <StackLayout Padding="15,0,15,0" Margin="0,50,0,0">
                    <Frame BackgroundColor="Transparent" Padding="0">
                        <StackLayout>
                            <Image Source="farsh.png">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnKabachok"/>
                                </Image.GestureRecognizers>
                            </Image>
                            <Label Text="Фаршированные кабачки" FontFamily="inglobal" FontSize="16" TextColor="White" />
                        </StackLayout>
                    </Frame>

                    <Frame BackgroundColor="Transparent" Padding="0" Margin="0,20,0,0">
                        <StackLayout>
                            <Image Source="grudka.png">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnGrudka"/>
                                </Image.GestureRecognizers>
                            </Image>
                            <Label Text="Грудка на овощах" FontFamily="inglobal" FontSize="16" TextColor="White"/>
                        </StackLayout>
                    </Frame>

                    <Frame BackgroundColor="Transparent" Padding="0" Margin="0,20,0,0">
                        <StackLayout>
                            <Image Source="chicken.png">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnChicken"/>
                                </Image.GestureRecognizers>
                            </Image>
                            <Label Text="Запеченная курочка с овощами" FontFamily="inglobal" FontSize="16" TextColor="White"/>
                        </StackLayout>
                    </Frame>

                    <Frame BackgroundColor="Transparent" Padding="0" Margin="0,20,0,100">
                        <StackLayout>
                            <Image Source="salat.png">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnSalat"/>
                                </Image.GestureRecognizers>
                            </Image>
                            <Label Text="Салатик 'Высокая кухня'" FontFamily="inglobal" FontSize="16" TextColor="White"/>
                        </StackLayout>
                    </Frame>
                </StackLayout>

            </StackLayout>
        </ScrollView>

    </StackLayout>
</ContentPage>